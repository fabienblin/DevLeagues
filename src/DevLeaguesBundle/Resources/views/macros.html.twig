{% macro my_challenge_reduced(challenge) %}
<tr>
  <th><a href="{{ path('show_challenge', {challengeId: challenge.id}) }}">{{challenge.name}}</a></th>
  <th>End : {{ challenge.endTimestamp|date("m/d/Y") }}</th>
  <th>{{ challenge.description }}</th>
</tr>
{% endmacro %}

