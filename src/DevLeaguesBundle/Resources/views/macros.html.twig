		<div class="box box-primary">
			<div class="box-body">
				<div class="row">
					<div class="col-lg-8">
						<a href="{{ path('show_league', {leagueId: league.id})}}"><h3>{{league.name}}</h3></a>

						<p>description</p>
					</div>
					<div class="col-lg-4">
						<img src=""
						alt="image de la ligue"
						class="img-responsive img-circle"/>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endmacro %}

