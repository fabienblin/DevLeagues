{% extends "DevLeaguesBundle::base.html.twig" %}

{% import "AvanzuAdminThemeBundle:layout:macros.html.twig" as macro %}

{% block page_title %}Profile{% endblock %}
{% block page_subtitle %}Read Only{% endblock %}

{% block page_content %}
<div class="row">
	<div class="col-lg-4">
		<div class="box box-primary">
			<div class="box-body">
				{{ macro.avatar(null, user.username, 'profile-user-img img-responsive img-circle') }}
				<h3 class="profile-username text-center">{{ user.username }}</h3>
				<p class="text-muted text-center">Software Engineer</p>
			</div>
			<div class="box-footer">
				<a href="{{ path('invite_friend', {userId: user.id}) }}" class="btn btn-primary btn-block">Send Invitation</a>
			</div>
		</div>
	</div>
	<div class="col-lg-8">
		<div class="box box-primary">
			<div class="box-header">
				<h3>Statistics</h3>
			</div>
			<div class="box-body">
				<p>
					des graphs et des points
				</p>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
		<div class="box box-primary">
			<div class="box-header">
				<h3>Technologies</h3>
			</div>
			<div class="box-body">
				<p>
					vazy la y'aura une chiote de petits progress sur des technos
				</p>
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<div class="box box-primary">
			<div class="box-header">
				<h3>Victories</h3>
			</div>
			<div class="box-body">
				<p>
					plein de petites medailles, prix, succes etc
				</p>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="box box-primary">
			<div class="box-header">
				<h3>Coworkers</h3>
			</div>
			<div class="box-body">
				<p>
					et la l'arbre des collaborations et les technos associees
				</p>
			</div>
		</div>
	</div>
</div>

{% endblock %}
