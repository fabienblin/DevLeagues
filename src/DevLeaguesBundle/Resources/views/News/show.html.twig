{% extends "DevLeaguesBundle::base.html.twig" %}

{% block page_title %}News{% endblock %}
{% block page_subtitle %}Read Only{% endblock %}

{% block page_content %}
<div class="row">
	<div class="col-lg-12">
		<div class="box box-primary">
			<div class="box-header">
				<img src=""
				alt="image de la ligue"
				class="profile-user-img img-responsive img-circle"/>
				<h3 class="profile-username text-center">{{ news.name }}</h3>
				<p class="text-muted text-center">{{ news.date }}</p>
			</div>
			<p>
				{{ news.content }}
			</p>
			<div class="box-footer">
				<a href="#" class="btn btn-primary btn-block">Edit</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}
